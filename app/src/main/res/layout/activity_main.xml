<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/protegeRed"
    tools:context=".MainActivity">

    <!-- Layout vertical para empilhar os itens -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Título "PROTEGE +" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:text="PROTEGE +"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="48sp"
            android:textStyle="bold" />

        <!-- Campo de E-mail -->
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Digite seu e-mail"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:singleLine="true"
            android:fontFamily="@font/nunito_sans_regular" />

        <!-- Campo de Senha -->
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            android:padding="16dp"
            android:singleLine="true"
            android:fontFamily="@font/nunito_sans_regular" />

        <!-- Link "Esqueceu sua senha?" -->
        <TextView
            android:id="@+id/textViewForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="24dp"
            android:padding="8dp"
            android:text="Esqueceu sua senha?"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_sans_semi_bold" />


        <!-- Botão "Entrar" -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button"
            android:text="Entrar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- Botão "Não possui login? Cadastre-se" -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rounded_button"
            android:text="Não possui login? Cadastre-se"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- Link "Entrar como visitante" -->
        <TextView
            android:id="@+id/textViewVisitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/visitor_link"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_sans_semi_bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

