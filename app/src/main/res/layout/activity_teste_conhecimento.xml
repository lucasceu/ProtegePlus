<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".TesteConhecimentoActivity">

    <TextView
        android:id="@+id/tvProtegeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROTEGE +"
        android:textColor="@color/protegeRed"
        android:textSize="22sp"
        android:fontFamily="@font/nunito_sans_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvContadorQuestao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QuestÃ£o 1/5"
        android:textColor="@color/protegeTeal"
        android:fontFamily="@font/nunito_sans_bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvProtegeTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvProtegeTitle"/>

    <TextView
        android:id="@+id/tvPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teste de Conhecimento"
        android:textColor="#757575"
        android:textSize="14sp"
        android:fontFamily="@font/nunito_sans_regular"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProtegeTitle"/>

    <View
        android:id="@+id/dividerHeader"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvPageTitle"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/dividerHeader"
        app:layout_constraintBottom_toTopOf="@+id/btnConfirmarResposta">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_quiz_question"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvEnunciado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carregando pergunta..."
                    android:textColor="#C62828"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rgAlternativas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp">
            </RadioGroup>

            <TextView
                android:id="@+id/tvFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="#F1F8E9"
                android:padding="16dp"
                android:text="Resposta Correta!"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible"
                tools:textColor="@color/protegeTeal"/>

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirmarResposta"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/rounded_button"
        android:text="Confirmar Resposta"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_sans_bold"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>