<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".MenuEditarActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerenciar Dados"
        android:textColor="#D32F2F"
        android:textSize="28sp"
        android:fontFamily="@font/nunito_sans_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione o que deseja editar:"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_sans_regular"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGerenciarPessoas"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button"
            android:text="Pessoas / Usuários"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_sans_bold"
            android:drawableStart="@android:drawable/ic_menu_myplaces"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:drawableTint="@color/white"
            android:gravity="center_vertical|start"
            android:drawablePadding="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGerenciarTelefones"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button"
            android:text="Telefones de Emergência"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_sans_bold"
            android:drawableStart="@android:drawable/ic_menu_call"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:drawableTint="@color/white"
            android:gravity="center_vertical|start"
            android:drawablePadding="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGerenciarQuestionarios"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/rounded_button"
            android:text="Questionários (Questões)"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_sans_bold"
            android:drawableStart="@android:drawable/ic_menu_agenda"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:drawableTint="@color/white"
            android:gravity="center_vertical|start"
            android:drawablePadding="16dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>